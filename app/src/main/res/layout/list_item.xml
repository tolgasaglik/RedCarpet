<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:padding="2dp">
    
    <ImageView
        android:id="@+id/party_pic"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:contentDescription="desc"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>

    <TextView
        android:id="@+id/party_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/party_pic"
        android:paddingBottom="10dp"
        android:text="Event Name"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/party_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/party_name"
        android:layout_below="@id/party_name"
        android:text="Location"
        android:textSize="16sp"/>

    <Switch
        android:id="@+id/party_checkin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/party_name"
        android:layout_alignBottom="@id/party_name"
        />

</RelativeLayout>