<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.saglik.redcarpetapp.Activities.PartyCheckinActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:foregroundGravity="center" />

    <Button
        android:id="@+id/registerButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textColor="@color/colorPrimary"
        android:text="register this event"/>

    <Button
        android:id="@+id/participantButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/registerButton"
        android:layout_alignParentBottom="true"
        android:text="participants"
        android:textSize="14sp"
        android:textColor="@color/colorPrimary"/>

    <Button
        android:id="@+id/mapsButton"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/participantButton"
        android:layout_alignParentBottom="true"
        android:text="google maps"
        android:textSize="14sp"
        android:textColor="@color/colorPrimary"/>


    <TextView
        android:id="@+id/locationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/imageView"
        android:minLines="2"
        android:layout_alignParentTop="true"
        android:textSize="20dp"
        android:text="Location" />
    
    <TextView
        android:id="@+id/organizerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/imageView"
        android:textSize="20dp"
        android:layout_below="@+id/locationView"/>

    <TextView
        android:id="@+id/dateView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/imageView"
        android:textSize="20dp"
        android:layout_below="@id/organizerView"/>

    <TextView
        android:id="@+id/infoView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/imageView"
        android:minLines="3"
        android:textSize="20dp"
        android:layout_below="@+id/dateView"/>


</RelativeLayout>
